<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:id="@+id/fragment_scene_preview_layout_id"
    tools:context=".Fragment.SceneCaptureFragment">

    <cn.edu.whu.indoorscene.View.CameraView
        android:id="@+id/camera_view_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:layout_gravity="end"
        android:keepScreenOn="true"/>

    <ImageButton
        android:id="@+id/capture_pic_btn_id"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src ="@drawable/camera_btn_icon"
        android:scaleType="fitCenter"
        android:layout_marginEnd="5dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="140dp"/>

</FrameLayout>
